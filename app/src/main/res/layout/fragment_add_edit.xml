<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="data"
            type="com.example.myfriend.data.db.entity.Friend" />
    </data>
     <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">

     <ImageView
         android:id="@+id/profile_image_view"
         android:layout_width="150dp"
         android:layout_height="150dp"
         android:layout_gravity="center_horizontal"
         android:layout_margin="40dp"
         app:setProfile="@{data.profile}"
         android:src="@drawable/ic_default_prefile"/>

     <EditText
         android:id="@+id/name_edit"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginHorizontal="10dp"
         android:layout_marginVertical="5dp"
         android:text="@{data.name}"
         android:hint="이름"
         android:textSize="20sp" />

     <EditText
         android:id="@+id/number_edit"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginHorizontal="10dp"
         android:layout_marginVertical="5dp"
         android:text="@{data.number}"
         android:hint="휴대폰 번호"
         android:textSize="20sp" />

     <EditText
         android:id="@+id/email_edit"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginHorizontal="10dp"
         android:layout_marginVertical="5dp"
         android:text="@{data.email}"
         android:hint="이메일"
         android:textSize="20sp" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_vertical"
         android:orientation="horizontal">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginHorizontal="10dp"
             android:text="국가"
             android:textSize="25sp"
             android:textStyle="bold" />

         <ImageView
             android:id="@+id/flag_image_view"
             android:layout_width="60dp"
             android:layout_height="40dp"
             app:setFlag="@{data.flagUri}"
             android:src="@drawable/ic_baseline_emoji_flags_24"/>
     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_vertical"
         android:orientation="horizontal">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginHorizontal="10dp"
             android:text="태그"
             android:textSize="25sp"
             android:textStyle="bold" />

         <ImageView
             android:layout_width="50dp"
             android:layout_height="50dp" />
     </LinearLayout>
 </LinearLayout>
</layout>